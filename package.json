{
  "name": "smart_tablet",
  "version": "0.1.0",
  "description": "An open source program for smart tablets.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ostrosco/smart_tablet"
  },
  "author": "ostrosco <ostrosco@fastmail.fm>",
  "license": "MIT",
  "dependencies": {
    "electron": "^11.3.0",
    "neon-cli": "^0.7.1"
  },
  "scripts": {
    "build": "electron-build-env neon build --release -- --target=armv7-unknown-linux-gnueabihf",
    "install": "yarn build",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --arch=armv7l"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "electron": "^11.3.0",
    "electron-build-env": "^0.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}
